<idea-plugin>
    <id>nl.zolotko.intellij-unison</id>
    <name>Unison</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor url="https://github.com/azolotko/intellij-unison/issues/new" email="azolotko@gmail.com">Alex Zolotko
    </vendor>

    <description>An IntelliJ IDEA plugin for Unison programming language.</description>

    <idea-version since-build="212.0"/>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="Unison.NewFile" class="nl.zolotko.intellij.unison.actions.NewUnisonFileAction">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewGroup1"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Unison Scratch File" implementationClass="nl.zolotko.intellij.unison.language.UnisonFileType$"
                  fieldName="MODULE$" language="Unison" extensions="u"/>

        <internalFileTemplate name="Unison Scratch File"/>
    </extensions>

</idea-plugin>
